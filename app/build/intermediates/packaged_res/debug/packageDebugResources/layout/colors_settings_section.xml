<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutColors"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- تغيير لون الخلفية -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/background_color"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnBackgroundColor"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/white"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnBgWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أبيض"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnBgBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أزرق فاتح"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- تغيير لون الكلمة -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/word_color"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnWordColor"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/black"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnWordBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أسود"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnWordGreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أخضر"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- تغيير لون الحركات -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diacritics_color"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnDiacriticsColor"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/holo_red_light"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnDiacriticsRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="أحمر"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnDiacriticsPurple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بنفسجي"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
